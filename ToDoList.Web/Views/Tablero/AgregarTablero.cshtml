@model ToDoList.Data.EF.Tablero
@{
    ViewBag.Title = "Agregar Tablero";
}
<style>
    /* Main form container styling */
    .formAgregarTablero {
        background-color: #f3f9ff; /* light Azure-inspired background */
        border-radius: 8px;
        padding: 30px;
        max-width: 500px;
        margin: 40px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: Arial, sans-serif;
        color: #2b579a; /* Azure primary text color */
    }

    /* Header styling */
    .formAgregarTablero h2 {
        font-size: 1.8em;
        color: #0078d4; /* Azure blue */
        margin-bottom: 20px;
    }

    /* Form group styling */
    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        font-size: 1.1em;
    }

    /* Input styling */
    .form-control {
        padding: 10px;
        font-size: 1em;
        border-radius: 5px;
        border: 1px solid #0078d4;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #00bcf2; /* lighter Azure accent */
        box-shadow: 0 0 5px rgba(0, 123, 242, 0.3); /* subtle blue shadow */
        outline: none;
    }

    /* Validation message styling */
    .text-danger {
        font-size: 0.9em;
        color: #d9534f; /* standard error color */
    }

    /* Submit button styling */
    .btn-primary {
        background-color: #0078d4; /* Azure blue */
        border: none;
        color: #ffffff;
        font-size: 1.1em;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.3s;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #005a9e; /* darker Azure blue for hover */
        transform: scale(1.05);
    }

    
</style>

<div class="formAgregarTablero">
    <h2>Agregar Tablero</h2>
    <form asp-action="AgregarTablero">
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Agregar Tablero" class="btn btn-primary" />
        </div>
    </form>
</div>

